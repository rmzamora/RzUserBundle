{% extends base_template %}

{% block html_class %}rz-login-page{% endblock html_class%}

{# remove navbar #}
{% block navbar %}{% endblock %}

{% block admin_body_class %} rz-login{% endblock %}
{% block main_container %}
    {% block main_content %}
        <div class="wrapper">
            {% block login_title %}
            <h1><img src="{{  asset('bundles/rzuser/img/logo.png') }}" alt="{{ admin_pool.title }}" /></h1>
            {% endblock login_title %}
            {% block login_body %}
            <div class="login-body">
                <h2>SIGN IN</h2>
                <form action="{{ path("sonata_user_admin_security_check") }}" method="post" id="login_form">
                    {% if error %}
                        <div class="alert alert-danger alert-login">
                            {{ error.messageKey|trans(error.messageData) }}
                        </div>
                    {% endif %}
                    <div class="row-fluid">
                        <div class="control-group">
                            <div class="email controls">
                                <input class="span12" type="text" id="username" name="_username" placeholder="{{ 'security.login.username'|trans({}, 'RzUserBundle') }}" value="{{ last_username }}" />
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="pw controls">
                                <input class="span12" type="password" id="password" name="_password" value="password" />
                            </div>
                        </div>
                        <div class="submit">
                            <div class="remember">
                                <input class='icheck-me' data-skin="square" data-color="aero" id="remember" type="checkbox" id="remember_me" name="_remember_me" value="on"/> <label> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            </div>
                            <button type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                        </div>

                    </div>
                </form>
                <div class="forget">
                    <span class="linkform"><a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a></span>
                </div>
            </div>
            {% endblock login_body %}
        </div>
    {% endblock main_content %}
{% endblock main_container %}
