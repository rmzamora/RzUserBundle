<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="rz.user.block.profile_gender_graph" class="Rz\UserBundle\Block\ProfileGenderGraphBlockService">
            <tag name="sonata.block" />
            <argument>rz.user.block.profile_gender_graph</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="service_container" />
        </service>

        <service id="rz.user.block.profile_age_graph" class="Rz\UserBundle\Block\ProfileAgeGraphBlockService">
            <tag name="sonata.block" />
