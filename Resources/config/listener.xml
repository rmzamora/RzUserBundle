<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--<parameters>-->
        <!--<parameter key="rz.user.security.force_update_password_listener.class">Rz\UserBundle\Event\Listener\ForcePasswordUpdateListener</parameter>-->
    <!--</parameters>-->

    <services>
        <service id="rz.user.password_expire.login_listener" class="%rz.user.password_expire.login_listener.class%">
            <argument type="service" id="session" />
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="rz_user.password_expire.config.manager" />
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin" />
        </service>

        <service id="rz.user.password_expire.force_update_password_listener" class="%rz.user.password_expire.force_update_password_listener.class%">
            <argument type="service" id="router" />
            <argument type="service" id="security.context" />
            <argument type="service" id="session" />
            <argument type="service" id="rz_user.password_expire.config.manager" />
            <tag name="kernel.event_listener" event="kernel.request" method="onCheckPasswordExpired" />
        </service>


        <service id="rz.user.event_listener.authentication" class="%rz.user.event_listener.authentication.class%">
            <tag name="kernel.event_listener" event="security.interactive_login" method="onAuthenticationSuccess"/>
            <argument type="service" id="rz.user.manager.user_authentication_logs" />
            <argument>%rz.user.user_authentication_logs.enabled%</argument>
        </service>

    </services>

</container>
